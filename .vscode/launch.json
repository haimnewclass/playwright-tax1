{ 

    "version": "0.2.0", 

    "configurations": [ 

      { 

        "type": "node", 

        "request": "launch", 

        "name": "Playwright Debugger", 

        "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js", 

        "args": [ 

            "${workspaceFolder}/node_modules/@playwright/test/cli.js", 

